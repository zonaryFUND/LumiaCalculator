{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext", "ESNext.Array"],
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "dictionary/*": ["./src/dictionary-jsons/*"],
      "app-types/*": ["./src/types/app-types/*"],
      "components/*": ["./src/components/*"],
      "@app/*": ["./src/*"],
      "resources/*": ["../resources/*"],
      "util/*": ["./src/util/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "vitest/globals"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
    "./vitest-setup.ts",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  }
}
