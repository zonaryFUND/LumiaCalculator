.mobiletab
    height: 100%
    overflow-y: scroll

.pctab
    display: flex
    position: relative
    flex-direction: column
    flex-shrink: 2
    height: 100%

.tab
    >header
        width: 100%
        background: var(--c4)
        color: white
        padding: 8px
        font-size: 10px
    
    h2
        font-size: 1.35rem   

    h3
        font-size: 1.2rem
        margin-bottom: 2px

    .content
        overflow-y: scroll
        flex-grow: 1