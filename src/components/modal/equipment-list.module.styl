.list
    display: flex
    flex-direction: column
    align-items: stretch
    position: absolute
    background: var(--base)
    width: 95vw
    max-width: 600px
    height: 80vh
    margin: auto
    inset: 0
    border-radius: 16px
    overflow: hidden
    box-shadow: 0 0 25px rgba(0,0,0,0.5)

    >*
        padding: 16px

    >header
        display: flex
        flex-direction: column
        justify-content: space-between
        align-items: stretch
        border-bottom: 1px solid lightgray
        padding: 0 0 16px
        margin: 16px 16px 0

        h1
            display: flex
            justify-content: space-between
            align-items: center
            font-size: 1.4rem

        p
            font-size: 0.8rem
            margin-top: 4px

    section header
        display: flex
        justify-content: space-between
        align-items: center
        margin-bottom: 8px

        p
            font-size: 0.8rem
            line-height: 0.9rem
            text-align: right


    .content
        flex: 1
        overflow-y: scroll
        border-radius: 8px

    ul
        display: grid
        place-content: start
        grid-template-columns: repeat(auto-fill, 76px)
        column-gap: 8px
        row-gap: 8px
        align-items: start

        @media screen and (max-width: 1023px) 
            grid-template-columns: repeat(auto-fill, 62px)

    .blank
        width: 74px
        margin-bottom: 20px

        @media screen and (max-width: 1023px) 
            width: 62px

    li,.blank
        display: inline-flex
        flex-direction: column
        position: relative
        justify-content: center
        text-align: center
        cursor: pointer

        >div
            aspect-ratio: 74 / 41

        p
            display: -webkit-box
            font-size: 0.75rem
            font-weight: bold
            overflow: hidden
            text-overflow: ellipsis
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical
            z-index: 1

            @media screen and (max-width: 1023px) 
                font-size: 0.7rem

    .selected::before
        content: ""
        position: absolute
        inset: -4px
        background: var(--c2)
        grid-row: 1 / -1
    
    .selected
        p
            font-weight: bold
            color: var(--bg)

    h3
        font-size: 1.2rem

    section:not(:last-child)
        margin-bottom: 16px

.list:focus
    outline: 0