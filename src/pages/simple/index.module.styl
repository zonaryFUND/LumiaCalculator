.pcsimple
    display: flex
    flex-direction: column
    align-items: stretch
    font-size:  12px
    height: 100%
    gap: 16px
    margin: 0 auto
    max-width: 1300px

.mobilesimple
    display: flex
    flex-direction: column
    align-items: stretch
    width: 100%
    height: 100%

.header
    display: flex
    justify-content: space-between
    align-items: stretch
    gap: 24px

    .storage
        display: flex
        justify-content: space-between
        align-items: center
        flex: 1
        gap: 8px
        padding: 4px 8px
        border-radius: 4px
        background: var(--bg)
        overflow: hidden

        h1
            font-size: 14px

        div
            gap: 8px

            button
                padding: 0 8px

            button:not(:last-child)
                margin-right: 4px

    .formula
        display: flex
        padding: 4px 8px
        gap: 12px
        border-radius: 4px
        justify-content: space-between
        align-items: center
        background: var(--bg)
        font-size: 14px
        font-weight: bold
        color: var(--lmg)
        transition: color 0.25s ease

    .on
        color: var(--main)

    .config
        color: var(--c3)


.simple
    .tooltip
        padding: 0

.collapse
    width: 400px
    gap: 8px

    .header
        gap: 4px