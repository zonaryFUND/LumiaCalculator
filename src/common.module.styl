.shadowed-button
    box-shadow: 0 3px 1px -2px rgba(0,0,0,0.2)

.system-button
    color: white
    background: var(--c4)

.button-medium
    height: 28px

.modal-overlay
    position: fixed
    inset: 0
    z-index: 100
    background-color: rgba(0,0,0,0.5)

.hover, .hover-bright
    transition: filter 0.25s ease

.hover:hover
    filter: brightness(0.8)

.hover-bright:hover
    filter: brightness(1.4)
